#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/app/services/gateway/node_modules/@apollo/protobufjs/bin/node_modules:/app/services/gateway/node_modules/@apollo/protobufjs/node_modules:/app/services/gateway/node_modules/@apollo/node_modules:/app/services/gateway/node_modules:/app/services/node_modules:/app/node_modules:/node_modules:/app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/app/services/gateway/node_modules/@apollo/protobufjs/bin/node_modules:/app/services/gateway/node_modules/@apollo/protobufjs/node_modules:/app/services/gateway/node_modules/@apollo/node_modules:/app/services/gateway/node_modules:/app/services/node_modules:/app/node_modules:/node_modules:/app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@apollo/protobufjs/bin/pbjs" "$@"
else
  exec node  "$basedir/../@apollo/protobufjs/bin/pbjs" "$@"
fi
